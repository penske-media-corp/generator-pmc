{
	"name": "pmc/<%= wpSlug %>",
		"description": "<%= wpTitle %>",
		"type": "<%= wpComposerType %>",
		"license": "proprietary",
		"authors": [
		{
			"name": "PMC",
			"homepage": "https://pmc.com"
		}
		],
		"scripts": {
			"post-install-cmd": [
				<% if ('wpVipGo' == wpHostType) { %>"ln -svfr ./vendor/pmc/mu-plugins/vip-go-mu-plugins-built/* ./vendor/pmc/mu-plugins/",
				"ln -svfr ./vendor/pmc/plugins/pmc-vip-go-plugins/* ./vendor/pmc/plugins/"<% } %>
				<% if ('wpCom' == wpHostType) { %>"@TODO"<% } %>
			]
		},
		"repositories": {
			"pmc/pmc-plugins": {
					"type": "git",
				"url": "https://bitbucket.org/penskemediacorp/pmc-plugins.git"
			},
			<% if(wpHasParentTheme) { %>"pmc/<%= wpParentTheme %>": {
					"type": "git",
					"url": "https://bitbucket.org/penskemediacorp/<%= wpParentTheme %>.git"
			},<% } %>
			<% if('wpCom' == wpHostType) { %>"pmc/vip-wpcom-mu-plugins": {
				"type": "package",
				"package": {
					"name": "pmc/vip-wpcom-mu-plugins",
					"version": "dev-master",
					"type": "wordpress-muplugin",
					"source": {
						"url": "https://github.com/automattic/vip-wpcom-mu-plugins.git",
						"type": "git",
						"reference":"master"
					}
				}
			},
			"pmc/wordpress-vip-plugins": {
				"type": "git",
				"url": "https://bitbucket.org/penskemediacorp/wordpress-vip-plugins.git"
			},<% } %>
			<% if('wpVipGo' == wpHostType) { %>"pmc/vip-go-mu-plugins-built": {
				"type": "package",
				"package": {
					"name": "pmc/vip-go-mu-plugins-built",
					"version": "dev-master",
					"type": "wordpress-muplugin",
					"source": {
						"url": "https://github.com/Automattic/vip-go-mu-plugins-built.git",
						"type": "git",
						"reference":"master"
					}
				}
			},
			"pmc/pmc-vip-go-plugins": {
				"type": "git",
				"url": "https://bitbucket.org/penskemediacorp/pmc-vip-go-plugins.git"
			},<% } %>
			"pmc/pmc-codesniffer": {
				"type": "git",
				"url": "https://bitbucket.org/penskemediacorp/pmc-codesniffer.git"
			},
			"pmc/composer-ci-meta": {
				"type": "git",
				"url": "https://bitbucket.org/penskemediacorp/pmc-codesniffer.git"
			}
		},
		"require": {
			"composer/installers": "^1.6",
			<% if(wpHasParentTheme) { %>"pmc/<%= wpParentTheme %>": "dev-master",<% } %>
			<% if('wpCom' == wpHostType) { %>"pmc/wordpress-vip-plugins": "dev-master",<% } %>
			<% if('wpCom' == wpHostType) { %>"pmc/vip-wpcom-mu-plugins": "dev-master",<% } %>
			<% if('wpVipGo' == wpHostType) { %>"pmc/pmc-vip-go-plugins": "dev-master",<% } %>
			<% if('wpVipGo' == wpHostType) { %>"pmc/vip-go-mu-plugins-built": "dev-master",<% } %>
			"pmc/pmc-plugins": "dev-master"
		},
		"extra": {
			"phpcodesniffer-search-depth": 5,
			"installer-paths": {
				"./vendor/pmc/mu-plugins/{$name}/": [
					"type:wordpress-muplugin"
				],
				"./vendor/pmc/plugins/{$name}/": [
					"type:wordpress-plugin"
				],
				"./vendor/pmc/themes/vip/{$name}/": [
					"type:wordpress-theme" ],
				"./vendor/pmc/dropins/{$name}/": [
					"type:wordpress-dropin"
				]
			}
		},
		"require-dev": {
			"dealerdirect/phpcodesniffer-composer-installer": "@stable",
			"exussum12/coverage-checker": "@stable",
			"hirak/prestissimo":"@stable",
			"jdgrimes/wp-l10n-validator":"@stable",
			"phploc/phploc": "@stable",
			"phpmd/phpmd":"@stable",
			"phpmetrics/phpmetrics": "@stable",
			"phpunit/phpcov": "@stable",
			"phpunit/phpunit": "6.5.7",
			"pmc/pmc-codesniffer":"dev-master",
			"sebastian/phpcpd": "1.4.*",
			"sensiolabs/security-checker": "@stable"
		}
}
